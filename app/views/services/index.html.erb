<h1>Listing services</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Type</th>
    <th>Price</th>
    <th>Merchant</th>
    <th>Start at</th>
    <th>End at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.title %></td>
    <td><%= service.category %></td>
    <td><%= service.price %></td>
    <td><%= service.merchant.name %>
    <td><%= service.start_at.strftime("%m/%d/%Y  %I:%M %p") %></td>
    <td><%= service.end_at.strftime("%m/%d/%Y  %I:%M %p") %></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

