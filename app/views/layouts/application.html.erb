 <!DOCTYPE html>
<html>
<head>
  <title>PrettyQuick</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="topbar">
  <div class="topbar-inner">
    <div class="container-fluid">
      <a class="brand" href="#">Pretty Quick</a>
      <ul class="nav">
          <li class="active"><%= link_to "Services", services_path %></li>
          <li><%= link_to "Merchants", merchants_path %></li>
      </ul>
      <p class="pull-right">
        <% if current_user %>
          Logged in as <%= current_user.email %>
          <%= link_to "Log out", log_out_path %>
        <% else %>
          <%= link_to "Sign up", sign_up_path %> or 
          <%= link_to "Log in", log_in_path %>
        <% end %>
      </p>
    </div>   
  </div>
</div>      
  <div class="container-fluid">


      <div class="sidebar">


      </div>
              
      <div class="content">
        <%= yield %>
      </div>
  
  </div>


<%= yield :scripts %>
</body>
</html>
